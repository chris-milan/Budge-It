<section class="expense-content">

  <div class="calendar-container" id="inline">

    {{!-- Full Calendar --}}
    <div id="calendar"></div>

    <div class="expense-info-container">

      <form id="expense-form">
        <a class="expenses-text">Expenses</a>

     <label for="expense-name"><span>Expense
            Name</span></label>    <input type="text" class="form-control input-style" id="expense-name">


<label for="expense-cost"><span>Monthly
            Payment</span></label>
        <input type="text" class="form-control input-style" id="expense-cost"> 



<label for="expense-date"><span>Date</span></label>
        <input type="text" class="form-control input-style datepicker" id="expense-date">
        

        <button type="submit" class="btn btn-success">Budge It</button>

      </form>

    </div>

  </div>
  <div class="expense-list">
    <table class="table table-striped list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Date</th>
          <th>Delete Expense</th>
        </tr>
      </thead>
      <tbody>
        <div id='statsList'>
          <span id='statIncome'>
            {{!-- monthly income --}}
          </span>
          <span id='statExpense'>
            {{!-- total expenses --}}
          </span>
          <span id='statDay'>
            {{!-- savings per day --}}
          </span>
          <span id='statRemainder'>
            {{!-- amt saved after billing cycle --}}
          </span>
        </div>

      </tbody>
    </table>
  </div>

</section>

{{!-- Custom Script --}}
<script src="js/expense.js" type="text/javascript"></script>

